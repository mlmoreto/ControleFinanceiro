<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.ExtratoPorConta">

    <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Selecione um dia para a busca:"
            android:textAlignment="center"
            android:textColor="#9C27B0"
            android:textStyle="bold" />

    <Button
            android:id="@+id/btnDataIni"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:layout_gravity="center_horizontal"
            android:background="#9C27B0"
            android:drawableLeft="@drawable/icon_calendar"
            android:text="Dia"
            android:textAlignment="center"
            android:textColor="#F4F5F8"
            android:textStyle="bold" />

    <include layout="@layout/layout_comum_extrato" />


</LinearLayout>